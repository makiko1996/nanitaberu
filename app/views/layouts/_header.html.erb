<header>
  <% if user_signed_in? %>
  <!--ヘッダーロゴ-->
    <%= link_to root_path do %>
     <%= image_tag 'logo.png', alt: 'logo', class: 'header_logo' %>
    <% end %>

    <nav class="global_nav">
      <ui>
        <%= link_to "マイページ", user_path(current_user), class: "fas fa-house-user" %>
      </ui>
      <ui>
        <%= link_to "新規投稿", new_post_path, class: "fas fa-plus-square" %>
      </ui>
      <ui>
        <%= link_to "投稿一覧", posts_path, class: "fas fa-utensils" %>
      </ui>
      <ui>
        <%= link_to "お気に入り一覧", post_favorites_path(current_user), class: "fas fa-star" %>
      </ui>
      <ui>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-door-closed" %>
      </ui>
    </nav>

    
  <% elsif admin_signed_in? %>
    <!--ヘッダーロゴ-->
    <%= link_to root_path do %>
     <%= image_tag 'logo.png', alt: 'logo', class: 'header_logo' %>
    <% end %>
    
    <nav class="global_nav">
      <ui>
        <%= link_to "カテゴリー", admin_categories_path %>
      </ui>
      <ui>
        <%= link_to "オモさ", admin_tastes_path %>
      </ui>
      <ui>
        <%= link_to "トップページ設定", admin_tags_path %>
      </ui>
      <ui>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </ui>
    </nav>
    
  <% else %>
    <!--ヘッダーロゴ-->
    <%= link_to root_path do %>
     <%= image_tag 'logo.png', alt: 'logo', class: 'header_logo' %>
    <% end %>
    <nav class="global_nav">
      <ui>
        <%= link_to "新規登録", new_user_registration_path, class: "fas fa-plus-square" %>
      </ui>
      <ui>
        <%= link_to "ログイン", new_user_session_path, class: "fas fa-sign-in-alt" %>
      </ui>
    </nav>
    
  <% end %>
</header>
