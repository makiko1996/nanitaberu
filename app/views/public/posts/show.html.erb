<h3>投稿詳細</h3> <%= notice %>

<h3 class="content_title">
  <%= @post.cooking_name %>
</h3>

<!--投稿画像の表示-->
<div class="content_image">
  <%= attachment_image_tag @post, :image, size: "400x300" %>
</div>

<!--投稿詳細の表示-->
<div class="content_body">
  <%= @post.user.name %>
  料理カテゴリー：<%= @post.category.name %>
  <!--関連するタグの表示-->
  <div class="tag_list">
    食材
    <% @post_tags.each do |tag| %>
      <%= tag.tag_name %>
    <% end %>
  </div>
  <!--難易度を星に変換して表示-->
  <%= @post.display_difficulty %>
  オモさ：<%= @post.taste.name %>
  参考レシピURL：<%= @post.url %>
</div>

<% if current_user.id == @post.user_id %>
  <%= link_to "編集する", edit_post_path(@post) %>
<% end %>
