<div class="login">
  <%= render "public/shared/about" %>

  <div class="user__box">
    <h2>新規会員登録</h2>
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :"名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name" %>
        </div>
      
        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :"登録用パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length.to_s %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "passwors" %>
        </div>
      
        <div class="field">
          <%= f.label :"確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password（確認用）" %>
        </div>
      
        <div class="actions">
          <%= f.submit "会員登録", class: 'btn btn-1' %>
        </div>
      <% end %>
      
      <%= render "public/shared/links" %>
  
  </div>
</div>