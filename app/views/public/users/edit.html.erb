<div class="body">
  <h3>ユーザー情報の変更</h3>
  <div class"useredit__all">
    <div class="useredit__form">
      <%= form_with model:@user, url:user_path(@user), local:true do |f| %>
        <table>
          <tr>
            <th>ユーザー名</th>
            <th><%= f.text_field :name %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= f.text_field :email %></th>
          </tr>
          <tr>
            <th><%= f.submit "変更を保存", class: "btn btn-2" %></th>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>