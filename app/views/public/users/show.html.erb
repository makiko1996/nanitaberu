<div class="body">
  <div class="userpage">
    <div class="userpage__name">
      <div class="userpage__title">
        <h3>
          <%= @user.name %>の投稿
        </h3>
      </div>
      <!--ユーザー情報の編集-->
      <div class="userpage__edit">
        <% if @user.id == current_user.id %>
          <%= link_to "ユーザー情報の編集", edit_user_path(@user), class: "btn btn-2" %>
        <% end %>
      </div>
    </div>
    <!--特定ユーザーの投稿のみ表示-->
    <%= render 'public/posts/post_index', posts: @posts %>
  </div>
</div>
